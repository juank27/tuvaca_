<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Port+Lligat+Sans&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="./usuarios/buscador/CSS/movile.css">
    <link rel="stylesheet" href="./usuarios/buscador/CSS//tablet.css" media="screen and (min-width:600px)">
    <link rel="stylesheet" href="./usuarios/buscador/CSS//web.css" media="screen and (min-width:1000px)">
    <link rel="icon" type="image/png" href="./principal/images/logoblanco.png" sizes="100x100">
    <title>tuVaca</title>
</head>

<body class="body_buscador" onload="cargar()">
    <input type="text" id="foto_perfil" style="display: none;" value={{data.photo}}>
    <p id="yo" style="display: none;">{{data.name}} </p>
    <section class="regresar">
        <div title="Volver" class="volver"></div>
        <p>Filtrado de Busquedas</p>
    </section>
    <section class="buscador">
        <form action="/busquedaBovina" id="form" method="POST">
            <input class="usuario" id="usuarios" type="text" placeholder="Buscar por usuario">
            <div class="usuario1" id="usuarios1">
                <div id="ruta"></div>
            </div>
            <div style="display: none;">
                <input type="text" name="razas" id="a">
                <input type="text" name="categorias" id="b">
                <input type="text" name="edad_" id="c">
                <input type="text" name="ubication" id="d">
                <input type="text" name="precios" id="e">
            </div>
            <div class="subir"></div>
            <div class="subir2"></div>
            <p class="filtrado"></p>
            <div class="selectores">
                <select class="selector" type="text"  id="razas">
                    <option value="">Raza</option>
                    <option value="Angus">Angus</option>
                    <option value="Brahman">Brahman</option>
                    <option value="Gyr">Gyr</option>
                    <option value="Holstein">Holstein</option>
                    <option value="Ayrshire">Ayrshire</option>
                    <option value="Jersey">Jersey</option>
                    <option value="Simental">Simental</option>
                    <option value="Normando">Normando</option>
                    <option value="Pardo Suizo">Pardo Suizo</option>
                    <option value="Cebu">Cebu</option>
                    <option value="Montpellier">Montpellier</option>
                </select>
                <select class="selector" type="text"  id="categorias">
                    <option value="">Categoria</option>
                    <option value="Ternera">Ternera</option>
                    <option value="Ternero">Ternero</option>
                    <option value="Novilla">Novilla</option>
                    <option value="Novillo">Novillo</option>
                    <option value="Vaca">Vaca</option>
                    <option value="Toro">Toro</option>
                </select>
                <select class="selector" type="text"  id="edad_" l>
                    <option value="">Edad</option>
                    <option value="1-3 meses">1-3 meses</option>
                    <option value="3-6 meses">3-6 meses</option>
                    <option value="6-9 meses">6-9 meses</option>
                    <option value="9-12 meses">9-12 meses</option>
                    <option value="1-3 años">1-3 años</option>
                    <option value="3-6 años">3-6 años</option>
                    <option value="6-9 años">6-9 años</option>
                    <option value="9-mas años">9-mas años</option>

                </select>
                <select class="selector" type="text"  id="ubication">
                    <option value="">Ubicación del Bovino</option>
                    <option value="Ubaté">Ubaté</option>
                    <option value="Carmen de Carupa">Carmen de Carupa</option>
                    <option value="Tausa">Tausa</option>
                    <option value="Suta">Suta</option>
                    <option value="Lenguazaque">Lenguazaque</option>
                    <option value="Guacheta">Guacheta</option>
                    <option value="Cucunuba">Cucunuba</option>
                    <option value="Simijaca">Simijaca</option>
                    <option value="Susa">Susa</option>
                    <option value="Fúquene">Fúquene</option>

                </select>
                <select class="selector" type="number"  id="precios">
                    <option value="">Precio</option>
                    <option value="$70.000-$500.000">$70.000-$500.000</option>
                    <option value="$500.000-$1´000.000">$500.000-$1´000.000</option>
                    <option value="$1´000.000-$2´000.000">$1´000.000-$2´000.000</option>
                    <option value="$2´000.000-$3´000.000">$2´000.000-$3´000.000</option>
                    <option value="$3´000.000-$4´000.000">$3´000.000-$4´000.000</option>
                    <option value="$4´000.000-$5´000.000">$4´000.000-$5´000.000</option>
                    <option value="$5´000.000-$6´000.000">$5´000.000-$6´000.000</option>
                    <option value="$6´000.000-mas">$6´000.000-mas</option>
                </select>
            </div>
        </form>
        <form action="/buscando" method="POST" class="oculto">
            <input type="text" name="usuario" id="usuario">
            <input type="submit" class="submit">
        </form>
    </section>
    {{#each b}}
    <p>{{name}}</p>
    {{/each}}
    <!--publicaciones-->
    {{#each datos}}
    <form class="publicacion" id="publicacion" action="/abrir-publicaciones" method="POST">
        <input value={{id}} type="text" class="id" style="display:none;">
        <input name="id_p" type="text" id="id2" value="" style="display:none;">
        <!--ocultos -->
        <input class="phone" type="text" value="{{phone}}" style="display:none;">
        <input class="categoria" type="text" value="{{categoria}}" style="display:none;">
        <input class="updateAt" type="text" value="{{updatedAt}}" style="display:none;">
        <input class="raza" type="text" value="{{raza}}" style="display:none;">
        <input class="precio" type="text" value="{{precio}}" style="display:none;">
        <input class="nombre" type="text" value="{{name}}" style="display:none;">

        <!--En  esta division esta la imagen del bovino a vender-->
        <div class="publicacion_imagen" onclick="posicion({{@index}})" title="Click para ver descripción">
            <img src={{input0}} alt="">
        </div>
        <!--En esta división esta la fecha, los me gusta y el chat-->
        <div class="publicacion_linea1">
            <p id="updateAt">{{updatedAt}}</p>
            <div>
                <div onclick="posicion4({{@index}})" class="chat"></div>
            </div>
        </div>
        <!--En esta división esta:-->
        <div class="publicacion_linea2">
            <div class="publicacion_perfil">
                <!--foto de perfil del publicador-->
                <div id="foto" onclick="posicion3({{@index}})" style="background-image: url({{photo}})"></div>
                <!--nombre del publicador-->
                <p id="nombre" onclick="posicion2({{@index}})">{{name}}</p>
            </div>
            <!--ubicación del bovino-->
            <p>{{ubication}}</p>

        </div>
        </div>
        <div class="publicacion_linea3">
            <!--precio del bovino-->
            <p id="precio">{{precio}}</p>
            <!--tipo de bovino-->
            <p id="raza">{{raza}}</p>
        </div>
    </form>
    <!--Formulario para dirigirse al perfil-->
    <form style="display:none;" action="/perfilU" method="POST" class="perfilS">
        <input name="id_p" id="id3" type="text" value="">
        {{!-- <input type="submit" value="" class="perfilS"> --}}
    </form>
    {{/each}}
    <section class="modal_container_p ">
        <section class="modal_p modal_cerrado_p">
            <div class="modal_Contendorp"><span class="cerrar_modal_p"></span></div>
            <iframe scrolling="no" id="framer" src="/modalpublicaciones"></iframe>
        </section>
    </section>
</body>
<script src="https://code.jquery.com/jquery-3.4.0.min.js"
    integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous"></script>
<script src="./usuarios/buscador/JS/index.js"></script>

</html>
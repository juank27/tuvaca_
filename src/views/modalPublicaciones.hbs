<body class="body_modal">
    <section class="modal_p2 ">
        <div class="modal_Cuerpo">
            <!--En esta division esta la imagen del bovino a vender-->
            <div class="publicacion_imagen2">
                <span class="prev" id="prev" onclick="plusSlides(-1)">&#10094;</span>
                <img class="centro fade bajo" id="centro" src={{datos.input0}}>

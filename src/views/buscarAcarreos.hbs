<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Port+Lligat+Sans&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="./usuarios/buscador/CSS/movile.css">
    <link rel="stylesheet" href="./usuarios/buscador/CSS//tablet.css" media="screen and (min-width:600px)">
    <link rel="stylesheet" href="./usuarios/buscador/CSS//web.css" media="screen and (min-width:1000px)">
    <link rel="icon" type="image/png" href="./principal/images/logoblanco.png" sizes="100x100">
    <title>tuVaca.com</title>
</head>

<body class="body_buscador" onload="cargar()">
    <input type="text" id="foto_perfil" style="display: none;" value={{data.photo}}>
    <p id="yo" style="display: none;">{{data.name}} </p>
    <section class="regresar">
        <div title="Volver" class="volver"></div>
        <p>Filtrado de Busquedas</p>
    </section>
    <section class="buscador">
        <form action="/busquedaAcarreos" id="form" method="POST">
            <input class="usuario" id="usuarios" type="text" placeholder="Buscar por usuario">
            <div class="usuario1" id="usuarios1">
                <div id="ruta"></div>
            </div>
            <div style="display: none;">
                <input type="text" name="vehiculo" id="a">
                <input type="text" name="ubication" id="d">
                <input type="text" name="precios" id="e">
            </div>
            <div class="subir"></div>
            <div class="subir2"></div>

            <p class="filtrado"></p>
            <div class="selectores">
                <select class="selector" type="text"  id="vehiculo">
                    <option value="">Vehiculo</option>
                    <option value="Furgon de estacas">Furgon de estacas</option>
                    <option value="Camioneta de estacas">Camioneta de estacas</option>
                    <option value="Camioneta de platon">Camioneta de platon</option>
                    <option value="Furgon">Furgon</option>
                </select>
                <select class="selector" type="text"  id="ubication">
                    <option value="">Municipio</option>
                    <option value="Ubaté">Ubaté</option>
                    <option value="Carmen de Carupa">Carupa</option>
                    <option value="Tausa">Tausa</option>
                    <option value="Suta">Suta</option>
                    <option value="Lenguazaque">Lenguazaque</option>
                    <option value="Guacheta">Guacheta</option>
                    <option value="Cucunuba">Cucunuba</option>
                    <option value="Simijaca">Simijaca</option>
                    <option value="Susa">Susa</option>
                </select>
                {{!-- <select class="selector" type="number"  id="precios">
                    <option value="">Precio</option>
                    <option value="$20.000-$50.000">$20.000-$50.000</option>
                    <option value="$50.000-$80.000">$50.000-$80.000</option>
                    <option value="$80.000-$100.000">$80.000-$100.000</option>
                    <option value="$100.000-$150.000">$100.000-$150.000</option>
                    <option value="$150.000-$200.000">$150.000-$200.000</option>
                    <option value="$200.000-mas">$200.000-mas</option>
                </select> --}}
            </div>
        </form>
        <form action="/buscandoAcarreo" method="POST" class="oculto">
            <input type="text" name="usuario" id="usuario">
            <input type="submit" class="submit">
        </form>
    </section>
    {{#each datos}}
    <form class="publicacion" id="publicacion" action="/abrir-publicaciones" method="POST">
        <input value={{id}} type="text" class="id" style="display:none;">
        <input name="id_p" type="text" id="id2" value="" style="display:none;">
        <!--ocultos -->
        <input class="phone" type="text" value="{{phone}}" style="display:none;">
        <input class="categoria" type="text" value="{{tipoveh}}" style="display:none;">
        <input class="nombre" type="text" value="{{name}}" style="display:none;">

        <!--En esta division esta la imagen del bovino a vender-->
        <div class="publicacion_imagen" onclick="modal()" title="Click para ver descripción">
            <img src={{url}} alt="">
        </div>
        <!--En esta división esta la fecha, los me gusta y el chat-->
        <div class="publicacion_linea1">
            <p>{{updatedAt}}</p>
            <div>
                <p>{{phone}}</p>
                <div onclick="posicion4({{@index}})" class="chat"></div>
            </div>
        </div>
        <!--En esta división esta:-->
        <div class="publicacion_linea2">
            <div class="publicacion_perfil">
                <!--foto de perfil del publicador-->
                <div onclick="posicion3({{@index}})" style="background-image: url({{photo}})"></div>
                <!--nombre del publicador-->
                <p onclick="posicion2({{@index}})">{{name}}</p>
            </div>
            <!--ubicación del bovino-->
            <p>{{ubication}}</p>

        </div>
        <p class="textoA">Tipo de Vehiculo: {{tipoveh}}</p>
        <div class="publicacion_linea3b" style="justify-content:center; align-items: center;">
            <table class="">
                <tr>
                    <td>Ubaté</td>
                    <td>{{ubate}}</td>
                </tr>
                <tr>
                    <td>Carupa</td>
                    <td>{{carupa}}</td>
                </tr>
                <tr>
                    <td>Tausa</td>
                    <td>{{tausa}}</td>
                </tr>
                <tr>
                    <td>Suta</td>
                    <td>{{suta}}</td>
                </tr>
                <tr>
                    <td>Lenguazaque</td>
                    <td>{{lenguazaque}}</td>
                </tr>
                <tr>
                    <td>Guacheta</td>
                    <td>{{guacheta}}</td>
                </tr>
                <tr>
                    <td>Simijaca</td>
                    <td>{{simijaca}}</td>
                </tr>
                <tr>
                    <td>Susa</td>
                    <td>{{susa}}</td>
                </tr>
                <tr>
                    <td>Cucunuba</td>
                    <td>{{cucunuba}}</td>
                </tr>

            </table>
        </div>
        <div class="publicacion_linea4b" style="justify-content:center ;">
            <p>
                {{descripcion}}
            </p>
        </div>
    </form>
    <!--Formulario para dirigirse al perfil-->
    <form style="display:none;" action="/perfilA" method="POST" class="perfilS">
        <input name="id_p" id="id3" type="text" value="">
        {{!-- <input type="submit" value="" class="perfilS"> --}}
    </form>
    {{/each}}
</body>

<script src="https://code.jquery.com/jquery-3.4.0.min.js"
    integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous"></script>
<script src="./usuarios/buscador/JS/index2.js"></script>

</html>